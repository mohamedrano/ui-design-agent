#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "ğŸ” Running pre-commit checks..."

# Run lint-staged for staged files
echo "ğŸ“ Formatting and linting staged files..."
npx lint-staged

# Exit if lint-staged failed
if [ $? -ne 0 ]; then
  echo "âŒ Lint-staged failed. Please fix the issues and try again."
  exit 1
fi

# Run type checking
echo "ğŸ” Running TypeScript type check..."
pnpm type-check

if [ $? -ne 0 ]; then
  echo "âŒ TypeScript type check failed. Please fix type errors and try again."
  exit 1
fi

# Run tests with coverage (only changed files in non-CI environment)
echo "ğŸ§ª Running tests..."
if [ "$CI" = "true" ]; then
  pnpm test:coverage
else
  pnpm test --changed --passWithNoTests
fi

if [ $? -ne 0 ]; then
  echo "âŒ Tests failed. Please fix failing tests and try again."
  exit 1
fi

# Check for environment file
if [ ! -f ".env.local" ] && [ ! -f ".env" ]; then
  echo "âš ï¸  Warning: No .env.local or .env file found. Make sure environment variables are configured."
fi

# Success message
echo "âœ… Pre-commit checks passed! Proceeding with commit..."
